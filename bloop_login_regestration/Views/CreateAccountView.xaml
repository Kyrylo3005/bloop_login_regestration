<UserControl x:Class="bloop_login_regestration.Views.CreateAccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bloop_login_regestration.Views"
             xmlns:customcontrols="clr-namespace:bloop_login_regestration.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="875">
    <Grid>
        <Border Width="450" Height="500"
                Background="#24272739"
                CornerRadius="56"
                BorderThickness="1"
                BorderBrush="#33FFFFFF"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid Margin="60,34,60,34">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0"
                   Text="Створити акаунт"
                   Foreground="White"
                   FontFamily="Montserrat"
                   FontWeight="Bold"
                   FontSize="26"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,18"/>

                <!-- Поля формы -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="39,0">
                    <StackPanel>
                        <TextBlock Text="Електронна пошта / номер телефону*" Foreground="LightGray" FontSize="12" FontFamily="Montserrat" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtGmail"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Height="35" Width="250"
                                 Background="#10FFFFFF"
                                 BorderBrush="#444A59"
                                 BorderThickness="1"
                                 Foreground="White"
                                 Padding="10"
                                 FontFamily="Montserrat"
                                 HorizontalAlignment="Left"
                                 Margin="0,0,0,10">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border CornerRadius="15" 
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Імʼя користувача*" Foreground="LightGray" FontSize="12" FontFamily="Montserrat" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtName"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Height="35" Width="250"
                                 Background="#10FFFFFF"
                                 BorderBrush="#444A59"
                                 BorderThickness="1"
                                 Foreground="White"
                                 Padding="10"
                                 FontFamily="Montserrat"
                                 HorizontalAlignment="Left"
                                 Margin="0,0,0,10">
                            <TextBox.Template>
                                <ControlTemplate TargetType="TextBox">
                                    <Border CornerRadius="15" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                        <ScrollViewer x:Name="PART_ContentHost" />
                                    </Border>
                                </ControlTemplate>
                            </TextBox.Template>
                        </TextBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Пароль*" Foreground="LightGray" FontSize="12" FontFamily="Montserrat" Margin="0,0,0,6"/>
                        <customcontrols:BindablePasswordBox Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                            Height="35"
                                                            Margin="0,0,0,10">
                        </customcontrols:BindablePasswordBox>
                    </StackPanel>

                    <!-- Чекбокс маркетинга -->
                    <StackPanel Orientation="Horizontal" Margin="2,6,0,0" VerticalAlignment="Center">
                        <CheckBox VerticalAlignment="Top" Width="18" Height="18" Margin="0,12,8,0"/>
                        <TextBlock TextWrapping="Wrap" Width="222" 
                           Foreground="LightGray" FontSize="12" FontFamily="Montserrat">
                    Надсилайте мені листи з інформацією про оновлення Bloop, підказками та пропозиціями.
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Легальные тексты -->
                <TextBlock Grid.Row="2" Foreground="LightGray" FontSize="11" FontFamily="Montserrat"
                   TextWrapping="Wrap" Margin="0,10,0,12">
            Натискаючи "Зареєструватися", ви погоджуєтесь з
            <Run Text=" Умовами надання послуг Bloop"/> та підтверджуєте, що
            ознайомилися з <Run Text=" Політикою конфіденційності"/>.
                </TextBlock>

                <!-- Кнопка -->
                <StackPanel Grid.Row="3" HorizontalAlignment="Center">
                    <Button x:Name="btnRegister"
                    Content="Зареєструватися"
                    Width="250" Height="46"
                    FontSize="14" FontFamily="Montserrat" FontWeight="SemiBold"
                    Foreground="White" Cursor="Hand" Click="btnRegister_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF006DEA"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF173856"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="22" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock FontSize="11" FontFamily="Montserrat" Foreground="LightGray" TextAlignment="Center" Margin="0,8,0,0">
                Вже є акаунт?
                <Hyperlink Click="LoginLink_Click" Cursor="Hand" Foreground="#00FFF0" TextDecorations="{x:Null}">
                    Увійти
                    <Hyperlink.Style>
                        <Style TargetType="Hyperlink">
                            <Setter Property="TextDecorations" Value="{x:Null}" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Hyperlink.Style>
                </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
