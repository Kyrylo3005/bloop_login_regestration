<UserControl x:Class="bloop_login_regestration.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bloop_login_regestration.Views"
             xmlns:viewModel="clr-namespace:bloop_login_regestration.ViewModel" 
             xmlns:customcontrols="clr-namespace:bloop_login_regestration.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="875">
    <Grid>
        <Border Width="650"
                Height="400"
                Background="#4C272739"
                CornerRadius="50"
                BorderThickness="1"
                BorderBrush="#33FFFFFF"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="290" />
                </Grid.ColumnDefinitions>

                <!-- Левая часть -->
                <StackPanel VerticalAlignment="Center">

                    <TextBlock Text="Буль. Клік. Голос."
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               FontFamily="Montserrat"
                               Margin="0,0,0,5"/>

                    <TextBlock Text="Твій пароль не забувся. Він просто заснув."
                               FontSize="13"
                               Foreground="LightGray"
                               FontFamily="Montserrat"
                               Margin="0,0,0,20"/>

                    <!-- Email -->
                    <TextBlock Text="Електронна пошта / номер телефону*" 
                               Foreground="LightGray"
                               FontSize="12"
                               FontFamily="Montserrat"
                               Margin="0,0,0,5"/>

                    <TextBox x:Name="txtGmail"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Height="35" Width="250"
                             Background="#10FFFFFF"
                             BorderBrush="#444A59"
                             BorderThickness="1"
                             Foreground="White"
                             Padding="10"
                             FontFamily="Montserrat"
                             HorizontalAlignment="Left"
                             Margin="0,0,0,10">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border CornerRadius="15" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                    <ScrollViewer x:Name="PART_ContentHost" />
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <!-- Password -->
                    <TextBlock Text="Пароль*"
                   Foreground="LightGray"
                   FontSize="12"
                   FontFamily="Montserrat"
                   Margin="0,0,0,5"/>


                    <customcontrols:BindablePasswordBox Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Height="35"
                         Margin="0,0,0,10">
                    </customcontrols:BindablePasswordBox>

                    <!-- Забув пароль -->
                    <TextBlock FontSize="10.5"
                   FontFamily="Montserrat"
                   Margin="0,0,0,15">
                <Hyperlink Click="ForgotPassword_Click"
                           Cursor="Hand"
                           Foreground="#00FFF0"
                           TextDecorations="{x:Null}">
                    <Hyperlink.Style>
                        <Style TargetType="Hyperlink">
                            <Setter Property="TextDecorations" Value="{x:Null}" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Hyperlink.Style>
                    Забув(-ла) пароль? Це трапляється навіть з найкращими.
                </Hyperlink>
                    </TextBlock>


                    <!-- Кнопка входа -->
                    <Button 
                    x:Name="btnEnter"
                    Command="{Binding LoginCommand}"
                    Content="Увійти"
                    FontSize="14"
                    FontFamily="Montserrat"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Left"
                    Cursor="Hand">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF006DEA"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF173856"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="250" Height="45"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>



                    <!-- Регистрация -->
                    <TextBlock FontSize="11"
                           FontFamily="Montserrat"
                           Foreground="LightGray"
                           TextWrapping="Wrap">
                    <Run Text="Ще не з нами? Давай це виправимо. " />
                    <Hyperlink Click="Register_Click"
                               Cursor="Hand"
                               Foreground="#00FFF0"
                               TextDecorations="{x:Null}">
                        Зареєструватися
                        <Hyperlink.Style>
                            <Style TargetType="Hyperlink">
                                <Setter Property="TextDecorations" Value="{x:Null}" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Hyperlink.Style>
                    </Hyperlink>
                    </TextBlock>
                </StackPanel>


                <!-- Правая часть: QR -->
                <StackPanel Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="30,0,0,0">
                    <Image x:Name="qrCodeImage" 
                       Width="200" 
                       Height="200"/>
                    <TextBlock Text="Увійти за допомогою &#x0a;QR-коду"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,15,0,10"
                       TextAlignment="Center"
                       FontFamily="Montserrat"/>
                    <TextBlock Text="Маєш Bloop на мобілці?&#x0a;Скануй і заходь."
                       Foreground="LightGray"
                       FontSize="14"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       FontFamily="Montserrat"
                       Margin="0,0,0,5"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
