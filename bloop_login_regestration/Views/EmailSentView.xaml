<UserControl x:Class="bloop_login_regestration.Views.EmailSentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bloop_login_regestration.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="875">
    <Grid>
        <Border Width="600"
        Height="300"
        Background="#4C272739"
        CornerRadius="50"
        BorderThickness="1"
        BorderBrush="#33FFFFFF"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40" >

                    <TextBlock FontSize="22"
                   FontWeight="Bold"
                   FontFamily="Inter"
                   Foreground="White"
                   Margin="0,0,0,5"
                   TextAlignment="Center">
            <Run Text="Готово! " Foreground="#00FFF0"/>
            <Run Text="Лист з інструкціями вже на шляху."/>
                    </TextBlock>

                    <TextBlock FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="White"
                   FontFamily="Inter"
                   Margin="0,0,0,25"
                   TextAlignment="Center">
            Перевір пошту (і спам, на всяк випадок).
                    </TextBlock>

                    <!-- Кнопка -->
                    <Button x:Name="btnBackLogin"
                            Content="Повернутись до форми входу"
                            FontSize="14"
                            FontFamily="Montserrat"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Cursor="Hand"
                            Width="250"
                            Height="45"
                            Margin="0,0,0,10"
                            Click="btnBackLogin_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF006DEA"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF173856"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Посилання -->
                    <TextBlock FontSize="11"
                   FontFamily="Inter"
                   Foreground="LightGray"
                   TextAlignment="Center">
            <Run Text="Не отримав(-ла) листа? &#x0a;"/>
            <Hyperlink Click="SentEmail_Click"
                       Cursor="Hand"
                       Foreground="#00FFF0"
                       TextDecorations="{x:Null}">
                Надіслати ще раз
                <Hyperlink.Style>
                    <Style TargetType="Hyperlink">
                        <Setter Property="TextDecorations" Value="{x:Null}" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Hyperlink.Style>
            </Hyperlink>
            <Run Text=" (через 30 секунд)"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
