<UserControl x:Class="bloop_login_regestration.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bloop_login_regestration.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1036" d:DesignWidth="1780">
    <Grid Background="#0C0F15">
        <Grid.RowDefinitions>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="379*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Друзья -->
            <ColumnDefinition Width="334"/>
            <!-- Центральный блок -->
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <!-- Чаты с друзьями -->
        <Border Grid.Column="0"
            Background="#11141D"
            Margin="8"
            CornerRadius="30"
            Grid.RowSpan="2">
            <Grid Margin="17,16">
                <Grid.RowDefinitions>
                    <!-- Верхняя часть с кнопками -->
                    <RowDefinition Height="Auto"/>
                    <!-- Разделительная линия -->
                    <RowDefinition Height="Auto"/>
                    <!-- Список друзей -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Верхние кнопки -->
                <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,12">

                    <!-- Кнопка Друзі -->
                    <Button Cursor="Hand"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,8">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#1E232E"
                                    BorderBrush="#373737"
                                    BorderThickness="2"
                                    CornerRadius="30"
                                    Padding="10,15">
                                    <DockPanel>
                                        <Canvas Width="20" Height="20" Margin="0,0,8,0" DockPanel.Dock="Left">
                                            <Path Data="M6.57761 15.4816C5.16283 16.324 1.4534 18.0441 3.71269 20.1966C4.81634 21.248 6.04552 22 7.5909 22H16.4092C17.9545 22 19.1837 21.248 20.2874 20.1966C22.5467 18.0441 18.8372 16.324 17.4225 15.4816C14.1048 13.5061 9.89522 13.5061 6.57761 15.4816Z"
                                              Stroke="#6DA1FF" StrokeThickness="1.5"/>
                                            <Path Data="M16.5 6.5C16.5 8.98528 14.4853 11 12 11C9.51475 11 7.50003 8.98528 7.50003 6.5C7.50003 4.01472 9.51475 2 12 2C14.4853 2 16.5 4.01472 16.5 6.5Z"
                                              Stroke="#6DA1FF" StrokeThickness="1.5"/>
                                        </Canvas>
                                        <TextBlock Text="Друзі"
                                               Foreground="#6DA1FF"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    </DockPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Кнопка Крамниця -->
                    <Button Cursor="Hand"
                        HorizontalAlignment="Stretch">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent"
                                    CornerRadius="30"
                                    Padding="10,10">
                                    <DockPanel>
                                        <Canvas Width="24" Height="24" Margin="0,0,8,0" DockPanel.Dock="Left">
                                            <Path Data="M13 5C17.9706 5 22 8.35786 22 12.5C22 14.5586 21.0048 16.4235 19.3933 17.7787C19.1517 17.9819 19 18.2762 19 18.5919V21H17L16.2062 19.8674C16.083 19.6916 15.8617 19.6153 15.6538 19.6687C13.9248 20.1132 12.0753 20.1132 10.3463 19.6687C10.1384 19.6153 9.91706 19.6916 9.79387 19.8674L9.00003 21H7.00003V18.6154C7.00003 18.2866 6.83838 17.9788 6.56767 17.7922C5.49288 17.0511 2.00003 15.6014 2.00003 14.0582V12.5C2.00003 11.9083 2.44775 11.4286 3.00003 11.4286C3.60668 11.4286 4.10191 11.1929 4.30208 10.5661C5.32556 7.36121 8.8319 5 13 5Z" 
                                              Stroke="White" StrokeThickness="1.5"/>
                                            <Path Data="M14.5 8C13.8681 7.67502 13.1964 7.5 12.5 7.5C11.8037 7.5 11.132 7.67502 10.5 8" 
                                              Stroke="White" StrokeThickness="1.5"/>
                                            <Path Data="M7.49984 11H7.50882" 
                                              Stroke="White" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                            <Path Data="M21 8.5C21.5 8 22 7.06296 22 5.83053C22 4.26727 20.6569 3 19 3C18.6494 3 18.3128 3.05676 18 3.16106" 
                                              Stroke="White" StrokeThickness="1.5"/>
                                        </Canvas>
                                        <TextBlock Text="Крамниця"
                                               Foreground="White"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    </DockPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>


                <!-- Разделительная линия -->
                <Border Grid.Row="1"
            Height="1"
            Background="#2A2F3A"
            Opacity="0.6"
            Margin="0,0,0,12"/>

                <!-- Список друзей -->
                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,12,0,0">

                    <!-- BubbleByte -->
                    <Button Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        Margin="0,0,0,10"
                        Cursor="Hand"
                        HorizontalContentAlignment="Stretch"
                        FocusVisualStyle="{x:Null}"
                        Click="BubbleByte_Friend_Click"
                        Tag="BubbleByte">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                        <DockPanel LastChildFill="True">
                            <!-- Аватар -->
                            <Grid Width="44" Height="44" Margin="0,0,8,0">
                                <Border CornerRadius="14"
                                    Cursor="Hand"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Images/BubbleByte.png" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                                <!-- Статус пользователя -->
                                <Ellipse Width="10" Height="10"
                                     Fill="Red"
                                     Stroke="#11141D" StrokeThickness="2"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Bottom"
                                     Margin="0,0,1,1"/>
                            </Grid>

                            <!-- Имя -->
                            <TextBlock Text="BubbleByte"
                                   Foreground="#666F86"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                    </Button>

                    <!-- Bloop -->
                    <Button Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        Margin="0,0,0,10"
                        Cursor="Hand"
                        HorizontalContentAlignment="Stretch"
                        FocusVisualStyle="{x:Null}"
                        Click="Friend_Click"
                        Tag="Bloop">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                        <DockPanel LastChildFill="True">
                            <Grid Width="44" Height="44" Margin="0,0,8,0">
                                <Border CornerRadius="14"
                                    Cursor="Hand"
                                    BorderBrush="#3A3F4A"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Images/bloop.png" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>

                                <Ellipse Width="10" Height="10"
                                     Fill="#666F86"
                                     Stroke="#11141D" StrokeThickness="2"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Bottom"
                                     Margin="0,0,1,1"/>
                            </Grid>
                            <TextBlock Text="Bloop"
                                   Foreground="#666F86"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                    </Button>

                    <!-- Группа LemonMoth, BubbleByte. Не знаю сможешь ли ты реализовать это, ибо это по факту чат с 3 людьми. -->
                    <Button Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        Margin="0,0,0,10"
                        Cursor="Hand"
                        HorizontalContentAlignment="Stretch"
                        FocusVisualStyle="{x:Null}"
                        Click="Friend_Click"
                        Tag="Group:LemonMoth,BubbleByte">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                        <DockPanel LastChildFill="True">
                            <!-- Два аватара -->
                            <Grid Width="44" Height="44" Margin="0,0,8,0">
                                <Border Width="35" Height="35"
                                    CornerRadius="12"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="0,0,8,0">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Images/BubbleByte.png" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>

                                <Border Width="35" Height="35"
                                    CornerRadius="12"
                                    BorderBrush="#11141D"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom">
                                    <Border.Background>
                                        <ImageBrush ImageSource="/Images/avatar.png" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- Тексты -->
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="LemonMoth, BubbleByte"
                                       Foreground="#666F86"
                                       FontSize="14"/>
                                <TextBlock Text="3 учасники"
                                       Foreground="#666F86"
                                       FontSize="12"/>
                            </StackPanel>
                        </DockPanel>
                    </Button>

                </StackPanel>


            </Grid>
        </Border>


        <!-- ==================== Центральный блок ==================== -->
        <Grid Grid.Column="1" Margin="4,8,8,8" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <!-- Сервера -->
                <RowDefinition Height="100"/>
                <!-- Чат и профиль -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Сервера -->
            <Border Grid.Row="0"
                    Background="#11141D"
                    CornerRadius="50"
                    BorderThickness="0,0,0,1"
                    Padding="8,8,16,8">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- Список серверов -->
                        <ColumnDefinition Width="*"/>
                        <!-- Правая панель -->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Сервера -->
                    <ScrollViewer Grid.Column="0"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Disabled"
                                  Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">

                            <!-- Сервер с оповещениями -->
                            <Grid Width="65" Height="65" Cursor="Hand" Margin="0,0,4,0">
                                <Ellipse Stroke="#3A3F4A" StrokeThickness="1">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Images/server.png" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <!-- Бейдж -->
                                <Ellipse Width="18" Height="18"
                                         Fill="Red"
                                         Stroke="White" StrokeThickness="2"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Bottom"
                                         Margin="0,0,0,0"/>
                                <TextBlock Text="25"
                                           Foreground="White"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Bottom"
                                           Margin="0,0,3,3"
                                           TextAlignment="Center"/>
                            </Grid>

                            <!-- Сервер без картинки (Просто первая буква с названия сервера) -->
                            <Grid Width="65" Height="65" Cursor="Hand" Margin="0,0,4,0">
                                <Ellipse Fill="#2A2F3A" Stroke="#3A3F4A" StrokeThickness="1"/>
                                <TextBlock Text="B"
                           Foreground="White"
                           FontSize="36"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                            </Grid>

                            <!-- Сервер без уведомлений -->
                            <Grid Width="65" Height="65" Cursor="Hand" Margin="0,0,4,0">
                                <Ellipse Stroke="#3A3F4A" StrokeThickness="1">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Images/server.png" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>

                        </StackPanel>
                    </ScrollViewer>

