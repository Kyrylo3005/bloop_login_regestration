                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Icon" Property="Stroke" Value="#3399FF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>



            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <!--  Чат -->
                    <ColumnDefinition Width="*"/>
                    <!-- Профиль -->
                    <ColumnDefinition Width="340"/>
                </Grid.ColumnDefinitions>

                <!-- Чат -->
                <Border Grid.Column="0"
                    Background="#1B1E26"
                    CornerRadius="50"
                    Margin="0,10,4,0">
                    <Grid Margin="20,16,20,0">
                        <Grid.RowDefinitions>
                            <!-- Хедер -->
                            <RowDefinition Height="Auto"/>
                            <!-- Поиск и список -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Хедер чата -->
                        <Border Grid.Row="0"
                                CornerRadius="20,20,0,0"
                                BorderThickness="0,0,0,1"
                                BorderBrush="#2A2F3A"
                                Padding="0,8,0,20">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <!-- Левая часть -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Правая часть -->
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Левая часть: аватар + имя -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <!-- Аватар -->
                                    <Grid Width="44" Height="44" Margin="0,0,8,0">
                                        <Border CornerRadius="14"
                                                Cursor="Hand"
                                                BorderThickness="1"
                                                SnapsToDevicePixels="True">
                                            <Border.Background>
                                                <ImageBrush ImageSource="/Images/BubbleByte.png" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>
                                        <!-- Статус пользователя -->
                                        <Ellipse Width="10" Height="10"
                                                 Fill="Red"
                                                 Stroke="#1B1E26" StrokeThickness="2"
                                                 HorizontalAlignment="Right"
                                                 VerticalAlignment="Bottom"
                                                 Margin="0,0,1,1"/>
                                    </Grid>
                                    <TextBlock Text="BubbleByte"
                                               Foreground="#6DA1FF"
                                               FontSize="16"
                                               FontWeight="Regular"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                                </StackPanel>

                                <!-- Правая часть: кнопки и поиск -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                                    <!-- Иконки -->
                                    <Button Width="25" Height="25" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="20,0,0,0">
                                        <Path Data="M3.77762 11.9424C2.8296 10.2893 2.37185 8.93948 2.09584 7.57121C1.68762 5.54758 2.62181 3.57081 4.16938 2.30947C4.82345 1.77638 5.57323 1.95852 5.96 2.6524L6.83318 4.21891C7.52529 5.46057 7.87134 6.08139 7.8027 6.73959C7.73407 7.39779 7.26737 7.93386 6.33397 9.00601L3.77762 11.9424ZM3.77762 11.9424C5.69651 15.2883 8.70784 18.3013 12.0576 20.2224M12.0576 20.2224C13.7107 21.1704 15.0605 21.6282 16.4288 21.9042C18.4524 22.3124 20.4292 21.3782 21.6905 19.8306C22.2236 19.1766 22.0415 18.4268 21.3476 18.04L19.7811 17.1668C18.5394 16.4747 17.9186 16.1287 17.2604 16.1973C16.6022 16.2659 16.0661 16.7326 14.994 17.666L12.0576 20.2224Z"
