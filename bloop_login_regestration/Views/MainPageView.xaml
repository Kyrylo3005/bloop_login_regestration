                                                    M8.0838 15.1112C7.06203 15.743 4.38299 17.0331 6.0147 18.6474C6.81178 19.436 7.69952 20 8.81563 20H15.1844C16.3005 20 17.1882 19.436 17.9853 18.6474C19.617 17.0331 16.938 15.743 15.9162 15.1112C13.5201 13.6296 10.4799 13.6296 8.0838 15.1112Z
                                                    M15.5 7.5C15.5 9.433 13.933 11 12 11C10.067 11 8.5 9.433 8.5 7.5C8.5 5.567 10.067 4 12 4C13.933 4 15.5 5.567 15.5 7.5Z"
                                              Stroke="White"
                                              StrokeThickness="1.5"
                                              Stretch="Uniform"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Icon" Property="Stroke" Value="#3399FF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Width="32" Height="32"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,20,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Path x:Name="Icon"
                                              Data="M21.011 14.0965C21.5329 13.9558 21.7939 13.8854 21.8969 13.7508C22 13.6163 22 13.3998 22 12.9669V11.0332C22 10.6003 22 10.3838 21.8969 10.2493C21.7938 10.1147 21.5329 10.0443 21.011 9.90358C19.0606 9.37759 17.8399 7.33851 18.3433 5.40087C18.4817 4.86799 18.5509 4.60156 18.4848 4.44529C18.4187 4.28902 18.2291 4.18134 17.8497 3.96596L16.125 2.98673C15.7528 2.77539 15.5667 2.66972 15.3997 2.69222C15.2326 2.71472 15.0442 2.90273 14.6672 3.27873C13.208 4.73448 10.7936 4.73442 9.33434 3.27864C8.95743 2.90263 8.76898 2.71463 8.60193 2.69212C8.43489 2.66962 8.24877 2.77529 7.87653 2.98663L6.15184 3.96587C5.77253 4.18123 5.58287 4.28891 5.51678 4.44515C5.45068 4.6014 5.51987 4.86787 5.65825 5.4008C6.16137 7.3385 4.93972 9.37763 2.98902 9.9036C2.46712 10.0443 2.20617 10.1147 2.10308 10.2492C2 10.3838 2 10.6003 2 11.0332V12.9669C2 13.3998 2 13.6163 2.10308 13.7508C2.20615 13.8854 2.46711 13.9558 2.98902 14.0965C4.9394 14.6225 6.16008 16.6616 5.65672 18.5992C5.51829 19.1321 5.44907 19.3985 5.51516 19.5548C5.58126 19.7111 5.77092 19.8188 6.15025 20.0341L7.87495 21.0134C8.24721 21.2247 8.43334 21.3304 8.6004 21.3079C8.76746 21.2854 8.95588 21.0973 9.33271 20.7213C10.7927 19.2644 13.2088 19.2643 14.6689 20.7212C15.0457 21.0973 15.2341 21.2853 15.4012 21.3078C15.5682 21.3303 15.7544 21.2246 16.1266 21.0133L17.8513 20.034C18.2307 19.8187 18.4204 19.711 18.4864 19.5547C18.5525 19.3984 18.4833 19.132 18.3448 18.5991C17.8412 16.6616 19.0609 14.6226 21.011 14.0965Z
                                                    M15.5 12C15.5 13.933 13.933 15.5 12 15.5C10.067 15.5 8.5 13.933 8.5 12C8.5 10.067 10.067 8.5 12 8.5C13.933 8.5 15.5 10.067 15.5 12Z"
                                              Stroke="White"
                                              StrokeThickness="1.5"
                                              Stretch="Uniform"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Icon" Property="Stroke" Value="#3399FF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>



            <!-- Друзья и Кракен -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <!-- Список друзей -->
                    <ColumnDefinition Width="*"/>
                    <!-- Kraken -->
                    <ColumnDefinition Width="340"/>
                </Grid.ColumnDefinitions>

                <!-- Зона 3 -->
                <Border Grid.Column="0"
                        Background="#1B1E26"
                        CornerRadius="50"
                        Margin="0,10,4,0">
                    <Grid Margin="20,16,20,0">
                        <Grid.RowDefinitions>
                            <!-- Хедер -->
                            <RowDefinition Height="Auto"/>
                            <!-- Поиск и список -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Хедер -->
                        <DockPanel Grid.Row="0" LastChildFill="False" Margin="10,10,0,16" VerticalAlignment="Top">
                            <!-- Кнопка "Друзі" -->
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Margin="0,0,16,0"
                                    VerticalAlignment="Center">
                                <DockPanel>
                                    <Canvas Width="20" Height="20" Margin="0,0,6,0" DockPanel.Dock="Left">
                                        <Path Data="M6.57761 15.4816C5.16283 16.324 1.4534 18.0441 3.71269 20.1966C4.81634 21.248 6.04552 22 7.5909 22H16.4092C17.9545 22 19.1837 21.248 20.2874 20.1966C22.5467 18.0441 18.8372 16.324 17.4225 15.4816C14.1048 13.5061 9.89522 13.5061 6.57761 15.4816Z"
                                              Stroke="White" StrokeThickness="1.5"/>
                                        <Path Data="M16.5 6.5C16.5 8.98528 14.4853 11 12 11C9.51475 11 7.50003 8.98528 7.50003 6.5C7.50003 4.01472 9.51475 2 12 2C14.4853 2 16.5 4.01472 16.5 6.5Z"
                                              Stroke="White" StrokeThickness="1.5"/>
                                    </Canvas>
                                    <TextBlock Text="Друзі"
                                               FontSize="16"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </DockPanel>
                            </Button>
                            <!-- Разделительная линия -->
                            <Border Width="1" Height="52"
                                    Background="#2A2F3A"
                                    Opacity="0.6"
                                    Margin="0,0,20,0"/>
                            <!-- Табы -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                                <TextBlock Text="Всі" Foreground="#6DA1FF" FontSize="14" FontWeight="SemiBold" Margin="0,0,16,0" Cursor="Hand"/>
                                <TextBlock Text="В мережі" Foreground="White" FontSize="14" Margin="0,0,16,0" Cursor="Hand"/>
                                <StackPanel Orientation="Horizontal" Cursor="Hand">
                                    <TextBlock Text="В очікуванні" Foreground="White" FontSize="14" Margin="0,0,4,0"/>
                                    <Ellipse Width="8" Height="8" Fill="Red" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Правая часть -->
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                                <!-- Обновить -->
                                <Button Width="32" Height="32"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Margin="0,0,16,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Canvas Width="24" Height="24">
                                                    <!-- Круг -->
                                                    <Path x:Name="CirclePath"
                                                          Data="M12.5 2.01175C12.3344 2.00395 12.1677 2 12 2C6.47778 2 2 6.28357 2 11.5667C2 14.1051 3.03333 16.4115 4.71889 18.1231C5.09 18.5 5.33778 19.0148 5.23778 19.5448C5.07275 20.4112 4.69874 21.2194 4.15111 21.893C5.59195 22.161 7.09014 21.9197 8.37499 21.2364C8.82918 20.9949 9.05627 20.8741 9.21653 20.8496C9.37678 20.8251 9.60633 20.8682 10.0654 20.9545C10.7032 21.0742 11.3507 21.1343 12 21.1334C17.5222 21.1334 22 16.8499 22 11.5667C22 11.3765 21.9942 11.1875 21.9827 11"
                                                          Stroke="White"
                                                          StrokeThickness="1.5"
                                                          StrokeLineJoin="Round"
                                                          StrokeStartLineCap="Round"
                                                          StrokeEndLineCap="Round"/>
